@model HutechAndYou.Models.SanPham

@{
    ViewBag.Title = "SuaSanPham";
    Layout = "~/Views/Shared/_LayoutAdminAdd.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaSP)

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
            <form class="login100-form validate-form flex-sb flex-w">
                <span class="login100-form-title p-b-32">
                    SỬA SẢN PHẨM
                </span>

                <span class="txt1 p-b-11">
                    Tên sản phẩm
                </span>
                <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                    <input class="input100" type="text" name="tensp" value="@Model.TenSP">
                    <span class="focus-input100"></span>
                </div>

                <span class="txt1 p-b-11">
                    Hãng sản xuất
                </span>
                <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                    @Html.DropDownList("MaHang")
                    <span class="focus-input100"></span>
                </div>

                <span class="txt1 p-b-11">
                    Ảnh minh họa
                </span>
                <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                    <input type="file" name="fileUpload">
                    <span class="focus-input100"></span>
                </div>

                <span class="txt1 p-b-11">
                    Ảnh minh họa 2
                </span>
                <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                    <input type="file" name="fileUpload1">
                    <span class="focus-input100"></span>
                </div>

                <span class="txt1 p-b-11">
                    Ảnh minh họa 3
                </span>
                <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                    <input type="file" name="fileUpload2">
                    <span class="focus-input100"></span>
                </div>

                <span class="txt1 p-b-11">
                    Ảnh minh họa 4
                </span>
                <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                    <input type="file" name="fileUpload3">
                    <span class="focus-input100"></span>
                </div>

                <span class="txt1 p-b-11">
                    Số lượng
                </span>
                <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                    <input class="input100" type="number" name="soluong" value="@Model.Soluongton">
                    <span class="focus-input100"></span>
                </div>

                <span class="txt1 p-b-11">
                    Giá bán
                </span>
                <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                    <input class="input100" type="number" name="giaban" value="@Model.GiaBan">
                    <span class="focus-input100"></span>
                </div>

                <span class="txt1 p-b-11">
                    CPU
                </span>
                <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                    <input class="input100" type="text" name="cpu" value="@Model.CPU">
                    <span class="focus-input100"></span>
                </div>

                <span class="txt1 p-b-11">
                    Loại CPU
                </span>
                <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                    <input class="input100" type="text" name="loaicpu" value="@Model.LoaiCpu">
                    <span class="focus-input100"></span>
                </div>

                <span class="txt1 p-b-11">
                    Ram
                </span>
                <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                    <input class="input100" type="text" name="ram" value="@Model.Ram">
                    <span class="focus-input100"></span>
                </div>

                <span class="txt1 p-b-11">
                    Crad đồ họa
                </span>
                <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                    <input class="input100" type="text" name="card" value="@Model.Crad">
                    <span class="focus-input100"></span>
                </div>

                <span class="txt1 p-b-11">
                    Kích thước màn hình
                </span>
                <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                    <input class="input100" type="text" name="manhinh" value="@Model.ManHinh">
                    <span class="focus-input100"></span>
                </div>

                <span class="txt1 p-b-11">
                    Ổ cứng
                </span>
                <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                    <input class="input100" type="text" name="ocung" value="@Model.OCung">
                    <span class="focus-input100"></span>
                </div>

                <span class="txt1 p-b-11">
                    Nội dung
                </span>
                <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                    <input class="input100" type="text" name="noidung" value="@Model.NoiDung">
                    <span class="focus-input100"></span>
                </div>

                <div class="flex-sb-m w-full p-b-48">
                    <div style="color:red" class="contact100-form-checkbox">
                        @ViewData["Loi"]
                    </div>

                    <div>
                        <a href="@Url.Action("Index","Admin")" class="txt3">
                            Admin?
                        </a>
                    </div>
                </div>

                <div style="width:50%;float:left" class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        SỬA
                    </button>
                </div>
                <div class="login100-form-btn" style="width:100px;float:right">
                    <a href="@Url.Action("SanPham","Admin")">
                        <h6 style="color:white">SẢN PHẨM</h6>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
